# The combination of xss-lock, nm-applet and pactl is a popular choice, so

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

###########################################
## German Keyboard                       ##
###########################################

# the way that keyboards work is we use bindings to trigger a copy of certain letters to a clipboard
# and then immediately pasting it

mode "Deutsch" {
        bindsym --release Control+a exececho -n ä| xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Control+Shift+a exececho -n Ä | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v

        bindsym --release Control+u exececho -n ü | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Control+Shift+u exececho -n Ü | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v

        bindsym --release Control+o exececho -n ö | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Control+Shift+o exececho -n Ö | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v

        bindsym --release Control+s exececho -n ß | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v


        # back to normal: Enter or Escape or $mod+g
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+g mode "default"
}

# d was unfortunately taken for the dmenu
bindsym $mod+g mode "Deutsch"


###########################################
## Persian Keyboard                      ##
###########################################

# Persian keyboards can be really unintuitive, this is a personal layout that makes intuitive sense based on the sounds of the keyboards.
# the way that keyboards work is we use bindings to trigger a copy of certain letters to a clipboard
# and then immediately pasting it

mode "Persian" {
        # the general logic behind the keyboard is that the sounds are the same with the english keyboard.
        # duplicate letters for sounds have like the 's' letter have keybindings of Shift, Ctrl, then Ctrl+Shift in the order of the persian alphabet
        # non existent letters such as 'sh' 'kh' are all shift

        # these keybindings are loosely based on this website https://www.lexilogos.com/keyboard/persian.htm

        bindsym --release a exececho -n ا | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release b exececho -n ب | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release p exececho -n پ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release t exececho -n ت | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+s exececho -n ث | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release j exececho -n ج | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+c exececho -n چ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        # 'ه' is more common so the regular h is reserved for that
        bindsym --release Shift+h exececho -n ح | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        bindsym --release Shift+k exececho -n خ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release d exececho -n د | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        #this 'z' is less common so it takes the shift
        bindsym --release Shift+z exececho -n ذ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        bindsym --release r exececho -n ر | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release z exececho -n ز | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+z exececho -n ژ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release s exececho -n س | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+s exececho -n ش | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Control+s exececho -n ص | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Control+z exececho -n ض | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+t exececho -n ط | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+a exececho -n ع | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release Shift+q exececho -n غ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release f exececho -n ف | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release q exececho -n ق | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        # double key binding since there are two English letters 
        bindsym --release k exececho -n ک | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release c exececho -n ک | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v

        bindsym --release g exececho -n گ | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release l exececho -n ل | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release m exececho -n م | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release n exececho -n ن | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        #double keybinding since there are two English letters
        bindsym --release v exececho -n و | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release o exececho -n و | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        bindsym --release h exececho -n ه | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        
        # double key binding since there are two English letters 
        bindsym --release y exececho -n ی | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v
        bindsym --release i exececho -n ی | xclip -selection c; exec --no-startup-id xdotool key --clearmodifiers ctrl+v


        # back to normal: Enter or Escape or $mod+p
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+p mode "default"
}

bindsym $mod+p mode "Persian"


###########################################
## Network Manager                       ##
###########################################
# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet


###########################################
## VOLUME                                ##
###########################################

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#alternative key binding for raising and lowering volume
bindsym Control+Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym Control+Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status

###########################################
## SCREEN BRIGHTNESS                     ##
###########################################

#the brightness is set on startup to the brightness it was previously
exec --no-startup-id ~/.config/i3/scripts/brightnessControl.sh && $refresh_i3status

#to put asleep the entire screen
bindsym $mod+$alt+z exec ~/.config/i3/scripts/brightnessControl.sh tmpOff

#to wake up the screen to full capacity 
bindsym $mod+$alt+f exec ~/.config/i3/scripts/brightnessControl.sh full && $refresh_i3status

#to set screen brightness to 1001
bindsym $mod+$alt+1 exec ~/.config/i3/scripts/brightnessControl.sh set 100 && $refresh_i3status

#to set screen to lowest capacity
bindsym $mod+$alt+l exec ~/.config/i3/scripts/brightnessControl.sh low && $refresh_i3status

bindsym XF86MonBrightnessUp exec ~/.config/i3/scripts/brightnessControl.sh + && $refresh_i3status
bindsym XF86MonBrightnessDown exec ~/.config/i3/scripts/brightnessControl.sh - && $refresh_i3status

#alternative key binding for raising and lowering brightness
bindsym Control+Right exec ~/.config/i3/scripts/brightnessControl.sh + && $refresh_i3status
bindsym Control+Left exec ~/.config/i3/scripts/brightnessControl.sh - && $refresh_i3status


